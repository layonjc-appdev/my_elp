<div class="page-header">
  <h3>Pic #<%= @pic.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Caption</dt>
      <dd><%= @pic.caption %></dd>

      <dt>Image</dt>
      <dd><%= @pic.image %></dd>

      <dt>User</dt>
      <dd><%= @pic.user_id %></dd>

      <dt>Restaurant</dt>
      <dd><%= @pic.restaurant_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/pics" class="btn btn-primary">
        Back
      </a>
      <a href="/pics/<%= @pic.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_pic/<%= @pic.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
