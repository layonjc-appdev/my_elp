<div class="page-header">
  <h1>
    Pics
    <a href="/pics/new" class="btn btn-lg btn-success">New Pic</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "pics_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :caption_cont, "Caption contains" %>
    <%= f.text_field :caption_cont, :class => "form-control", :placeholder => "Caption contains" %>
  </div>

<div class="form-group">
    <%= f.label :image_cont, "Image contains" %>
    <%= f.text_field :image_cont, :class => "form-control", :placeholder => "Image contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Restaurant Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='restaurantgteqcreated_atPicker'>
                  <%= f.text_field :restaurant_created_at_gteq, :class => "form-control", :placeholder => "Restaurant Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='restaurantlteqcreated_atPicker'>
                  <%= f.text_field :restaurant_created_at_lteq, :class => "form-control", :placeholder => "Restaurant Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#restaurantgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#restaurantlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#restaurantgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#restaurantlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#restaurantlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#restaurantgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/pics" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#pics_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
        <th>User</th>
        <th>Restaurant</th>
        <th>Actions</th>
      </tr>

      <% @pics.each do |pic| %>
      <tr>
        <td><%= pic.caption %></td>
        <td><%= pic.image %></td>
        <td>
          <% if pic.user.present? %>
            <a href="/users/<%= pic.user.id %>">
              <%= pic.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if pic.restaurant.present? %>
            <a href="/restaurants/<%= pic.restaurant.id %>">
              <%= pic.restaurant.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/pics/<%= pic.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == pic.user %>
            <a href="/pics/<%= pic.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_pic/<%= pic.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @pics, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
